@model BiblioMonolitica.web.Data.Models.Usuario.UsuarioModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Usuario</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreApellidos" class="control-label"></label>
                <input asp-for="NombreApellidos" class="form-control" />
                <span asp-validation-for="NombreApellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input type="email" asp-for="Correo" class="form-control" />
                <span  asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clave" class="control-label"></label>
                <input asp-for="Clave" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                  <label asp-for="esActivo" class="control-label"></label>
                  <input asp-for="esActivo" class="form-control" />
                  <span asp-validation-for="esActivo" class="text-danger"></span>
                </label>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="idUsuario" class="form-control" />
                <span asp-validation-for="idUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
